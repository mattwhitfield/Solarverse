<Window
    x:Class="Solarverse.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:core="clr-namespace:Solarverse.UI.Core;assembly=Solarverse.UI.Core"
    Title="Solarverse"
    Width="1600"
    Height="900"
    Closing="Window_Closing"
    mc:Ignorable="d">
    <Grid>
    <core:GraphControl x:Name="Graph" />
        <Grid
            x:Name="ShuttingDownGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            Opacity="0.8"
            Visibility="Collapsed">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="20"
                Foreground="Black"
                Text="Shutting down..." />
        </Grid>
    </Grid>
</Window>